@model List<HumanResorcues.Dtos.EmployeeResultDto>

@{
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee List</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h1 class="mb-4">Employee List</h1>

       

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Salary</th>
                    <th>Department</th>
                    <th>Position</th>
                    <th>Hire Date</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>University</th>
                    <th>Education Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Age</td>
                        <td>@employee.Gender</td>
                        <td>@employee.Salary</td>
                        <td>@employee.Department</td>
                        <td>@employee.Position</td>
                        <td>@employee.HireDate.ToShortDateString()</td>
                        <td>@employee.PhoneNumber</td>
                        <td>@employee.Email</td>
                        <td>@(employee.IsActive ? "Active" : "Inactive")</td>
                        <td>@employee.UniversityName</td>
                        <td>@employee.EducationDepartment</td>
                        <td>
                            <a href="/HumanResource/EditEmployee/@employee.Id" class="btn btn-primary btn-sm">Update</a>
                            <a href="/HumanResource/DeleteEmployee/@employee.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
</body>
</html>
